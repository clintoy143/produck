<div class="container">
    <div class="row">
        <div class="col-md-offset-4 col-md-4">
            <%= form_for @profile, url: new_distributor_distributor_profile_path do |profile| %>
                <%= profile.hidden_field :distributor_id, :value => @distributor %>
                <div class="form-group">
                    <%= profile.label :name %>
                    <%= profile.text_field :name, class:"form-control"%>
                </div>    
                <div class="form-group">
                    <%= profile.label :last_name %>
                    <%= profile.text_field :last_name, class:"form-control" %>
                </div>
                <div class="form-group">
                    <%= profile.label :age %>
                    <%= profile.text_field :age , class:"form-control"%>
                </div>            
                <div class="form-group">
                    <%= profile.label :address %>
                    <%= profile.text_area :address, class:"form-control" %>
                </div>
                <div class="form-group">
                    <%= profile.label :contact_number %>
                    <%= profile.text_field :contact_number, class:"form-control"%>
                </div>
    
                <div class="form-group">
                    <%= profile.submit "Create profile", class:"btn btn-success" %>
                </div>
            <% end %>    
        </div>
    </div>    
</div>