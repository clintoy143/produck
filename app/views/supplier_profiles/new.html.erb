<div class="container">
    <div class="row">
        <div class="col-md-offset-4 col-md-4">
            <div class="#">
                <%= form_for @profile, url: supplier_supplier_profile_path do |profile| %>
                    <%= profile.hidden_field :supplier_id, :value => @supplier.id %>
                        <div class="form-group">
                            <%= profile.label :store_name %>
                            <%= profile.text_field :store_name, class:"form-control"%>
                        </div>    
                        <div class="form-group">
                            <%= profile.label :category %>
                            <%= profile.text_field :category , class:"form-control"%>
                        </div>            
                        <div class="form-group">
                            <%= profile.label :address %>
                            <%= profile.text_area :address, class:"form-control" %>
                        </div>
                        <div class="form-group">
                            <%= profile.label :contact_number %>
                            <%= profile.text_field :contact_number, class:"form-control"%>
                        </div>
            
                        <div class="form-group">
                            <%= profile.submit "Create profile", class:"btn btn-success" %>
                        </div>
                <% end %>
            </div>    
        </div>
    </div>    
</div>            
