<div class="container">

    <div class="row">
        <div class="col-md-offset-4 col-md-4">
            <div class="well">
                <h2>Sign up for Distributor</h2>
                <%= form_for @distributor do |d|%>
                    <div class="form-group">
                        <%= d.label :email %>
                        <%= d.email_field :email, class:"form-control" %>
                    </div>
                    
                    <div class="form-group">
                        <%= d.label :password %>
                        <%= d.password_field :password, class:"form-control" %>
                    </div>
                    
                    <div class="form-group">
                        <%= d.submit "Create my Account", class:"btn btn-success"%>
                    </div>
                <% end %>
            </div>
        </div>
    </div>    
</div>