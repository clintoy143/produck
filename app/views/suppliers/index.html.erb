<div class="container-fluid" id="supplier-wrapper">
    <div class="row supplier-head">
        <br />
        <br />
        <br />
        <br />        
        <br />
        <h1 class="text-center " id="supp-index-head">Start your entrepreneurial journey, today.</h1>
        <p class="text-center"><%= link_to "Sign-up now", new_distributor_path, class:"btn btn-primary" %></p>
    </div>
    <br />
    <div class="container">
        
        <div class="row">
            <div class="col-md-9">
                <% @supplier.each do |s| %>
                    <div class="col-md-4">
                        <div class="thumbnail">
                            <%= image_tag "sample.jpg", alt:"Product Image", class:"img-dim" %>
                            <div class="caption">
                                <table>    
                                    <tr>
                                        <td><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></td>
                                        <td><%= s.supplier_profile.store_name %></td>
                                    </tr>
                                    <tr>
                                        <td><span class="glyphicon glyphicon-tag" aria-hidden="true"></span></td>
                                        <td><%= s.supplier_profile.category %></td>
                                    </tr>
                                    <tr>
                                        <td><span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span></td>
                                        <td><%= s.supplier_profile.address %></tr>
                                    </tr>    
                                </table>
                                <br />
                                <div class="text-center">
                                    <p><%= link_to "View store", supplier_path(s) %></p>
                                </div>
                            </div>    
                        </div>    
                    </div>
                <% end %>
            </div>    
        </div>
    </div>
</div>


